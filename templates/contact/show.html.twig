{% extends 'layout/master.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block content %}

	<h1>Contact</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ contact.id }}</td>
			</tr>
			<tr>
				<th>Fist_name</th>
				<td>{{ contact.FistName }}</td>
			</tr>
			<tr>
				<th>Last_name</th>
				<td>{{ contact.LastName }}</td>
			</tr>
			<tr>
				<th>CIN</th>
				<td>{{ contact.CIN }}</td>
			</tr>
			<tr>
				<th>Phone</th>
				<td>{{ contact.Phone }}</td>
			</tr>
			<tr>
				<th>Pick_Up</th>
				<td>{{ contact.PickUp ? contact.PickUp|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Return_back</th>
				<td>{{ contact.ReturnBack ? contact.ReturnBack|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Note</th>
				<td>{{ contact.Note }}</td>
			</tr>
			<tr>
				<th>Your car</th>
				<td>{{ contact.CarName }}</td>
			</tr>
		</tbody>
		<tfooter>
			<tr>
				<td>
					<button class="btn-back-to-shipping">
						<a href="{{ path('app_infos_index') }}">back to list</a>

					</button>
				</td>

				{#}	<td>
									<button class="button-payment">
										<a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
				
									</button>
								</td>
				{#}
			</tr>
		</tfooter>
	</table>
	{#}<tr>
		<td class="btn-back-to-shipping">
			{{ include('contact/_delete_form.html.twig') }}

		</td>
	</tr> {#}
{% endblock %}
