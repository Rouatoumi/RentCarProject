{% extends 'layout/master.html.twig' %}

{% block title %}Car
{% endblock %}

{% block content %}
	<center>
		<h1 class="product-info" style="color:#bf1b1b">Car Detail</h1>
	</center>
	<center>
		<table class="table table-striped table-dark " style="width:60%">
			<tbody class="thead-light">
				{% if is_granted('ROLE_ADMIN') %}
					<tr>
						<th style="color:black">Id</th>
						<td style="color:black">{{ car.id }}</td>
					</tr>
				{% endif %}
				<tr>

					<th style="color:black">Name</th>

					<td style="color:black">{{ car.Name }}</td>
				</tr>

				<tr>
					<th style="color:black">Model Year</th>
					<td style="color:black">{{ car.Brand }}</td>
				</tr>
				<tr>
					<th style="color:black">Price/Day</th>
					<td style="color:black">{{ car.Price }}
						DT</td>
				</tr>
				<tr>
					<th style="color:black">Decription</th>
					<td style="color:black">{{ car.Decription }}</td>
				</tr>
				<tr>
					<th style="color:black">Image</th>
					<td>

						<center>
							<img src="{{ asset('/uploads/brochures/' ~ car.getImage()) }}" alt="img" class="cover-image" width="400" height="500">
						</center>
					</td>
				</tr>
			</tbody>
		</table>
	</center>

	{% if is_granted('ROLE_ADMIN') %}
		<center>
			<button class="btn-back-to-shipping">
				<a href="{{ path('app_car_index') }}">back to list</a>

			</button>
			<button class="btn-back-to-shipping">
				<a href="{{ path('app_car_edit', {'id': car.id}) }}">edit</a>

			</button>

			
		{#}	{{ include('car/_delete_form.html.twig') }} {#}
		</center>
	{% endif %}
	<br>
	<center>
		<button class="btn-back-to-shipping">
			<a href="{{ path('app_contact_new',{'id': car.id})}}">Booking</a>
		</button>
	</center>

{% endblock %}
